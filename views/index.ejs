<%- include('partials/header.ejs') %>

<body>
    <%- include('partials/navbar.ejs') %>

    <div class="container">
        <h1 class="mt-2 text-center">Questions: <a href="/question" class="btn btn-primary">To Ask</a></h1>
        
        <hr>

        <% questions.forEach(question => { %>
            <div class="card mt-3 mb-1">
                <div class="card-body">
                    <h3><%= question.title %></h3>
                </div>

                <div class="card-footer">
                    <a class="btn btn-primary" href="/question/<%= question.id %>">To respond</a>
                </div>
            </div>
        <% }) %>
    </div>
</body>

<%- include('partials/footer.ejs') %>