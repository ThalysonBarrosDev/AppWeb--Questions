<%- include('partials/header.ejs') %>

<body>
    <%- include('partials/navbar.ejs') %>

    <div class="container">
        <div class="card mt-5" id="form-pergunta">
            <div class="card-header">
                <h3 class="text-center">Make Your Question</h3>
            </div>

            <div class="card-body">
                <form method="POST" action="/save-question">
                    <label for="inputTitle" class="mt-3">Question Title:</label>
                    <input type="text" class="form-control" id="inputTitle" name="inputTitle" required>

                    <label for="inputDescription" class="mt-3">Question Description:</label>
                    <textarea class="form-control" id="inputDescription" name="inputDescription" cols="30" rows="10" required></textarea>

                    <button class="btn btn-primary mt-3">Create Question</button>
                </form>
            </div>
        </div>
    </div>
</body>

